{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",

        "types": [
            "node",
            "express"
        ],
        
        "outDir": "./Chat2Chat",
        "lib": ["es2020", "esnext.array", "DOM"],

        "strict": false,
        "allowJs": false,
        "checkJs": false,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "removeComments": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    },

    "include": [
        "./src/**/*.ts",
    ],

    "exclude": [
        "./src/frontend/*",
    ],
}
