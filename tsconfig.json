{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "Chat2Chat",
        "lib": ["es2020", "esnext.array", "DOM"],

        "strict": false,
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "removeComments": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    },

    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
    "types": ["node"]
}
